@{
    ViewData["Title"] = "Home Page";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/srm.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<div class="text-center">
    <h2>Student Resource Management</h2>
    <div class="row">
        <div class="col-md-4 d-flex justify-content-md-end justify-content-center mb-3">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addStudentModal" id="studentButton">Add Student</button>
        </div>
        <div class="col-md-4 d-flex justify-content-md-middle justify-content-center mb-3">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addResourceModal">Add Resources</button>
        </div>
        <div class="col-md-4 d-flex justify-content-md-start justify-content-center mb-3">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addAllocateResourceModal" id="allocationButton">Allocate Resource</button>
        </div>
    </div>
    <div>
        <table id="studentTable" class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Student Name</th>
                    <th>Resource Name</th>
                    <th>Allocated Till</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- Add Student Modal -->
<div class="modal fade" id="addStudentModal" tabindex="-1" role="dialog" aria-labelledby="addStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudentModalLabel">Add Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="studentNameInput" class="form-label">Enter Student Name:</label>
                    <input type="text" class="form-control" id="studentNameInput">
                </div>
                <div class="mb-3">
                    <label for="resourceSelect" class="form-label">Select Resource:</label>
                    <select id="resourceSelect" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label for="expiryDateInput" class="form-label">Allocated Till Date:</label>
                    <input type="date" class="form-control" id="expiryDateInput">
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="studentAdd">Submit</button>
            </div>
        </div>
    </div>
</div>


<!-- Add Resource Modal -->
<div class="modal fade" id="addResourceModal" tabindex="-1" role="dialog" aria-labelledby="addResourceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addResourceModalLabel">Add Resources</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="resourceNameInput" class="form-label">Enter Resource Name:</label>
                    <input type="text" class="form-control" id="resourceNameInput">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="resourceAdd">Submit</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Resource Allocation Modal -->
<div class="modal fade" id="addAllocateResourceModal" tabindex="-1" role="dialog" aria-labelledby="addAllocateResourceModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAllocateResourceModalLabel">Allocate Resources</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <label for="studentSelect" class="col-form-label">Select Student:</label>
                    <select id="studentSelect" class="form-select"></select>
                </div>
                <div class="row mb-3">
                    <label for="resourcesSelect" class="col-form-label">Select Resource:</label>
                    <select id="resourcesSelect" class="form-select"></select>
                </div>
                <div class="row mb-3">
                    <label for="expiryDateInputs" class="col-form-label">Allocated Till Date:</label>
                    <input type="date" id="expiryDateInputs" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="resourceAllocate">Allocate</button>
            </div>
        </div>
    </div>
</div>